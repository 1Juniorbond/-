<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000000">
    <EditText
        android:id="@+id/intervalEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入截图间隔（秒）"
        android:textColorHint="#000000"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/setStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入开始时刻（min）"
        android:textColorHint="#000000"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/setEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入结束时刻（min）"
        android:textColorHint="#000000"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/customSet"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始自定义截取"
        android:textSize="80px"
        android:onClick="customSet"/>

    <TextView
        android:id="@+id/showVideoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/videoInfoTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频总时长："
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="visible"/><!-- 按钮点击事件，对应 MainActivity 中的 showPhotoInfo 方法 -->
    <TextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间："
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间："
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="visible"/>
    <Button
        android:id="@+id/button_skipHome"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到主界面"
        android:textSize="80px"
        android:onClick="gotoHome"/>

</LinearLayout>
